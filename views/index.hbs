<main>
  {{#each items}}

      <div class="c-slice">
        <div class="c-slice__layout">

          {{! This element is aria-hidden, since it doesn't really contain }}
          {{! information, just some eye candy }}
          <div class="c-slice__image-and-shape-wrapper" aria-hidden="true">
            <svg width="100" height="100" viewBox="0 0 100 100">
            <circle cx="50" cy="50" r="50" fill="white" />
            </svg>
            <div class="c-slice__image-cropper">
              <img class="c-slice__image-element" src="{{ featurePerson.photo }}">
            </div>
          </div>

          {{#is this.type 'analytics'}}
            <p class="c-slice__body">
              <strong>{{ featurePerson.firstName }} wrote <a href="{{ url }}">{{ title}}</a></strong>
              which was looked at <strong>{{ prettyNum views }} times</strong> in just the past month.
              <strong class="c-slice__exclamation">{{ randomExclamation }}</strong>
            </p>
          {{/is}}
          {{#is this.type 'message'}}
            <blockquote class="c-slice__body">
              <div class="c-slice__source">From <cite>{{this.author}}</cite>:</div>
              <p>{{{ this.message }}}</p>
            </blockquote>
          {{/is}}

        </div>
      </div>

  {{/each}}

</main>

